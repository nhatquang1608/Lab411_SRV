<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreenActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.153"
        app:srcCompat="@drawable/scanner" />

    <Button
        android:id="@+id/illustration"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/background"
        android:text="Illustration"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/storyTelling"
        app:layout_constraintStart_toStartOf="@+id/storyTelling"
        app:layout_constraintTop_toBottomOf="@+id/storyTelling" />

    <Button
        android:id="@+id/equationSolver"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#FD6B7A"
        android:text="Equation Solver"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/storyTelling"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/background"
        android:text="Story Telling"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/equationSolver"
        app:layout_constraintStart_toStartOf="@+id/equationSolver"
        app:layout_constraintTop_toBottomOf="@+id/equationSolver" />

</androidx.constraintlayout.widget.ConstraintLayout>